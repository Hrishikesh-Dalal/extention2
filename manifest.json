{
  "manifest_version": 3,
  "name": "Screenshot Gemini Overlay",
  "version": "0.1.0",
  "description": "Press Ctrl+[ to capture visible page, send to Gemini, and display response in an overlay.",
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>", "https://generativelanguage.googleapis.com/*"],
  "action": {},
  "background": {"service_worker": "background.js"},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}

